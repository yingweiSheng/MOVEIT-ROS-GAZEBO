<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share er7robot_arm_description)/urdf/er7_two_arm_main.urdf.xacro"/>
    <let name="rviz_config_path" 
         value="$(find-pkg-share er7robot_arm_description)/rviz/urdf_config_pure.rviz"/>
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
               value="$(command 'xacro $(var urdf_path)')"/>
        <!--robot_description是一个标准参数，joint_state_publisher会自动寻找这个参数-->
    </node>
    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)"/>
</launch>